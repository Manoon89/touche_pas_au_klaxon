{% extends 'base.html.twig' %}

{% block title %}Liste des agences{% endblock %}

{% block body %}
    <h1>Liste des agences</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Ville</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for agency in agencies %}
            <tr>
                <td>{{ agency.city }}</td>
                <td>
                    <a href="{{ path('agency_edit', {'agencyId': agency.id}) }}">edit</a>
                    {{ include('agency/_delete_form.html.twig', { agency: agency }) }}                
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">aucune agence n'a été trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('agency_new') }}">Create new</a>
{% endblock %}
