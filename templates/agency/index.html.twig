{% extends 'base.html.twig' %}

{% block title %}Liste des agences{% endblock %}

{% block body %}

{% for message in app.flashes('success') %}
    <div class="flash">
        {{ message }}
    </div>
{% endfor %}

{% for message in app.flashes('error') %}
    <div class="alert alert-danger">
        {{ message }}
    </div>
{% endfor %}

    <h1>Liste des agences</h1>

    <a class="btn" href="{{ path('agency_new') }}">Créer une nouvelle agence</a>

    <table class="table">
        <thead>
            <tr>
                <th>Ville</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for agency in agencies %}
            <tr>
                <td>{{ agency.city }}</td>
                <td>
                    <a class="btn" href="{{ path('agency_edit', {'agencyId': agency.id}) }}">Modifier</a>
                    {{ include('agency/_delete_form.html.twig', { agency: agency }) }}                
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune agence n'a été trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
